<h2>Edit Post Partial --------------------------- </h2>

<%= form_for fff do |f| %>

	<% if fff.errors.any? %>
		<%= pluralize(@post.errors.count, "error") %> prohibited this post from being updated:
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
	
	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label :content %>
	<%= f.text_area :content %>
	
	<%= f.submit %>
<% end %>

<%= button_to "Delete this post",  url_for(controller: 'posts', action: 'destroy', id: fff ), method: :delete, data: { confirm: "Are you sure?" }, form_class: "button_link" if (user_signed_in? && fff.creator == current_user)%>
<br/>Supported by: <% fff.supporters.each do |x| %>  <%= link_to x.name, x %> <% end %>
<br/>Unsupported by: <% fff.unsupporters.each do |x| %>  <%= link_to x.name, x %> <% end %>
<br/> <%= link_to "Cancel", fff.conversation %> 


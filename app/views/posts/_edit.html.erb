<li>
<%= form_for fff do |f| %>

	<% if @post.errors.any? %>
		<%= pluralize(@post.errors.count, "error") %> prohibited this post from being updated:
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
	
	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label :content %>
	<%= f.text_area :content %>
	
	<%= f.submit %>
<% end %>

<%= link_to "Delete this post",  url_for(controller: 'posts', action: 'destroy', id: fff ), method: :delete if (user_signed_in? && fff.creator == current_user)%>
<br/>Supported by: <%= fff.supporters.collect{|x| x.name }.join(", ") %>
<br/>Unsupported by: <%= fff.unsupporters.collect{|x| x.name }.join(", ") %>
</li>